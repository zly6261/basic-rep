/**轮播***/
.swiper01{
  height:180px;
}
.slide-image{
  position: relative;
  width:100%;
  height:180px;
  background-size:cover;
  background-position: center;
}
.imgTitle{
  position: absolute;
  bottom:30px;
  width:100%;
  padding:5px 10px;
  text-align:right;
  background-color:rgba(0, 0, 0, 0.42);
  font-size:14px;
  color:#fff;
}
.tag{
  position:relative;
  font-size:14px;
  padding:10px 30px;
  color:#2a2a2a;
  font-family: Tangerine
}
.tag::before{
  content: '';
  position:absolute;
  top:20px;
  left:10px;
  width:10px;
  height:1px;
  background:#4a4a4a;
}
.tag::after{
  content: '';
  position:absolute;
  top:20px;
  left:140px;
  width:20px;
  height:1px;
  background:#4a4a4a;
}
.hotGoods{
  display: flex;
  text-align:center;
  border-radius:10px;
}
.hotGoods>view{
  width:33.33%;
  padding:10px;
 }
.hgBkg{
  position: relative;
  background-size:cover;
  background-position: center;
}

.hg>view{
  height:100%;
}
.hgleft>view{
  height:100px;
  
}
.hgleftTextBOX{
  display: flex;
  justify-content: center;
  align-content: flex-end;  
  flex-flow: row wrap;
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background-color:rgba(0, 0, 0, 0.15);
  padding:5px;
  color:#fff;
}
.hg-text{
  display: block;
  font-size:10px;
  overflow:hidden;
  max-height:30px;
  
}
.hg-price{
  font-size:14px;
}
.goods-box{
  position: relative;
}
.goods-item{
  padding:10px;
}
.goods-item image{
  width:100%;
  height:100%;
  border-radius:10px;
  border:1px solid #eee;
}
.goods-title{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  max-height:50px;
  font-size:14px;
  line-height:19px;
  padding-top:10px;
  

}
.goods-price{
  font-size:12px;
  color:red;
  font-weight: 6  00
}


