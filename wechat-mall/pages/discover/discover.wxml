<view class='header x-row'>
  <view class='x-col-center'>
    <i class='iconfont icon-fenlei headerPhoto'></i>
  </view>
  <view class='x-col x-col-center headerText'>DStore</view>
  <view class='x-col-center'>
    <i class='iconfont icon-sousuo'></i>
  </view>
</view>
<swiper class='Allphotos' indicator-dots="{{indicatorDots}}" autoplay='true' interval='3000' indicator-dots='true'>
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item.path}}" mode='aspectFill' class='tutu' />
      <view class='photoTitle'>{{item.title}}</view>
    </swiper-item>
  </block>
</swiper>
<view class="hot">HOT PRODUCT</view>
<view class='storeBox'>
  <view class='commidityBox' wx:for="{{commidity}}">
    <view class='commidityPhoto'>
      <image mode='aspectFit' class='commidity' src='{{item.image}}' />
    </view>
    <text class='commidityText'>{{item.titile}}</text>
    <view>
      <text class='price'>￥{{item.price}}</text>
      <text class='pastPrice'>￥{{item.pastPrice}}</text>
    </view>
  </view>
</view>

<tabBar pagenum="{{pageindex}}"></tabBar>